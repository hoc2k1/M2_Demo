<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/product_detail_styles.css" />
    </head>
    <body>
        <!-- xoa sku -->
        <referenceContainer name="product.info.stock.sku" remove="true"></referenceContainer>
        <!-- end -->
        
        <!-- chuyen qty len cung hang price -->
        <move element="product.info" destination="product.info.price" after="-"></move>
        <!-- end -->
        <!-- chuyen descrition duoi price -->
        <move element="product.info.details" destination="product.info.main" after="product.info.price"></move>
        <!-- end -->
        <!-- chuyen related product sang ben trai -->
        <move element="content.aside" destination="product.info.media" after="-"></move>
        <!-- end -->

        <!-- them tab -->
        <referenceBlock name="product.info.details">                
            <block class="Magento\Catalog\Block\Product\View\Description" name="custom-tab" template="Magento_Catalog::product/view/custom_tab.phtml" group="detailed_info">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Custom tab</argument>
                </arguments>
                <block class="Magento\Catalog\Block\Product\View" name="product.info.contact-for-sale-price" template="Magento_Catalog::product/view/contact_for_sale_price.phtml"/>
            </block>
        </referenceBlock>
        <!-- end them tab -->

        <!-- them custom product listing -->
        <referenceContainer name="content.aside">
            <block class="Magento\Cms\Block\Block" name="custom-product-listing" template="Bss_HelloWorld::product\view\static_block.phtml" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">custom-product-listing</argument>
                </arguments>
            </block>
        </referenceContainer>
        <!-- end them custom product listing -->
    </body>
</page>
